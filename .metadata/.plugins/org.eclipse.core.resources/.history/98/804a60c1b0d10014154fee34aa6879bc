package game;

import java.io.*;
import java.util.*;

public class test {
	
	public static void main(String[] args) throws FileNotFoundException {
		Scanner console = new Scanner(System.in);
		Character player = new Character();
		intro(console, player);
	}
	
	public static void intro(Scanner console, Character player) throws FileNotFoundException {
		System.out.println("Hi! What type of character would you like to create? Type barbarian, mage, or rogue.");
		String type = console.next();
		System.out.println("What is the name of your character?");
		String name = console.next();
		System.out.println("What is your character's title?");
		String title = console.next();
		if (type.startsWith("b")) {
			player = new Barbarian(name, title);
		} else if (type.startsWith("m")) {
			player = new Mage(name, title);
		}
		System.out.println("You've created a " + type + " by the name of " + player.toString())
	}

}
